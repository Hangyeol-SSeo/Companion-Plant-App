<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.canhub.cropper.CropImageView
            android:id="@+id/item_add_plant_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="@dimen/paragraph_margin"
            android:background="#FFDAE5D9"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/paragraph_margin"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/item_add_select_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사진 업로드" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <Button
                android:id="@+id/item_add_crop_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사진 자르기" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2" />
        </LinearLayout>

        <EditText
            android:id="@+id/item_add_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/paragraph_margin"
            android:hint="식물의 별명을 입력해주세요"/>

        <EditText
            android:id="@+id/item_add_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="식물 종을 입력해주세요"/>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab.DiaryReport">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <!-- Your View, which will have a width of 125% of the screen size -->
        <ImageView
            android:id="@+id/diary_report_background_circle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/fragment_item_circle_background"
            app:layout_constraintDimensionRatio="W,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1.25" />

        <ImageView
            android:id="@+id/diary_report_background_rect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#DAE5D9"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/diary_report_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/fragment_item_circle"
            app:layout_constraintBottom_toBottomOf="@+id/diary_report_background_circle"
            app:layout_constraintEnd_toEndOf="@+id/diary_report_background_circle"
            app:layout_constraintStart_toStartOf="@+id/diary_report_background_circle"
            app:layout_constraintTop_toTopOf="@+id/diary_report_background_circle"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/goldman_regular"
            android:hint="Today's title"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diary_report_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toolbar.MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mypage_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.125" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mypage_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.875" />

        <TextView
            android:id="@+id/mypage_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="User Name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF3E3A39"
            android:fontFamily="@font/goldman_regular"
            app:layout_constraintEnd_toEndOf="@id/mypage_right_guideline"
            app:layout_constraintStart_toStartOf="@id/mypage_left_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@ID or Email"
            android:textSize="20sp"
            android:fontFamily="@font/goldman_regular"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/mypage_username"
            app:layout_constraintStart_toStartOf="@id/mypage_left_guideline"
            app:layout_constraintEnd_toEndOf="@id/mypage_right_guideline"
            app:layout_constraintHorizontal_bias="0.0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="@id/mypage_username"
            app:layout_constraintStart_toStartOf="@id/mypage_left_guideline"
            app:layout_constraintEnd_toEndOf="@id/mypage_right_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp"
                android:fontFamily="@font/sofiasans_regular"
                android:text="User Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:textSize="14sp"
                android:fontFamily="@font/sofiasans_regular"
                android:text="Change Username" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            app:layout_constraintTop_toTopOf="@id/mypage_username"
            app:layout_constraintStart_toStartOf="@id/mypage_left_guideline"
            app:layout_constraintEnd_toEndOf="@id/mypage_right_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp"
                android:fontFamily="@font/sofiasans_regular"
                android:text="Password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="1"
                android:textSize="14sp"
                android:fontFamily="@font/sofiasans_regular"
                android:text="Change Password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            app:layout_constraintTop_toTopOf="@id/mypage_username"
            app:layout_constraintStart_toStartOf="@id/mypage_left_guideline"
            app:layout_constraintEnd_toEndOf="@id/mypage_right_guideline"
            app:layout_constraintHorizontal_bias="0.0"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT US"
                android:textColor="#FF3E3A39"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/goldman_regular"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/paragraph_margin" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo_gachon_slogan_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/paragraph_margin"
                android:text="Gachon University TEAM EHWA"
                android:textSize="16sp"
                android:textStyle="italic"
                android:fontFamily="@font/sofiasans_regular" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofiasans_regular"
                android:textSize="16sp"
                android:text="TEAM Member\n남지훈\t\t\tjhm6876@gmail.com\n유호성\t\t\tpower9910@gachon.ac.kr\n김서윤\t\t\ttenacity0813@gachon.ac.kr\n서한결\t\t\t97809@naver.com\n강지요\t\t\tqueenalison@naver.com" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:fontFamily="@font/goldman_regular"
            android:text="© 2023 TEAM EWHA"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent" >

            <Button
                android:id="@+id/mypage_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="뒤로가기" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>